<%- include('../layouts/header'); %>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= title %></h1>
        <a href="/admin/acta/new" class="btn btn-primary">Crear Nueva Acta</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Actas Recientes</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Fecha de Elaboración</th>
                            <th>Usuario Receptor</th>
                            <th>Entregado Por</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (actas && actas.length > 0) { %>
                            <% actas.forEach(acta => { %>
                                <tr>
                                    <td><%= acta.codigo_acta %></td>
                                    <td><%= new Date(acta.fecha_elaboracion).toLocaleString() %></td>
                                    <td><%= acta.usuario_recibe %></td>
                                    <td><%= acta.entregado_por_nombre %></td>
                                    <td><a href="/admin/acta/<%= acta.id %>" class="btn btn-sm btn-info">Ver</a></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="5" class="text-center">No se han creado actas todavía.</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer'); %>